<% provide(:title, @user.name) %>
<div class='row'>
  <aside class='col-md-4'>
    <section class='user_info'>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class='col-md-8'>
    <% if @user.tips.any? %>
      <h3>Tips (<%= @user.tips.count %>)</h3>
      <ol class='tips'>
        <%= render @tips %>
      </ol>
      <%= will_paginate @tips%>
    <% end %>
  </div>
</div>