<% provide(:title, @user.name) %>
<div class='row'>
  <aside class='col-md-4'>
    <section class='user_info'>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% if current_user.admin? && !current_user?(user) %>
      | <%= link_to "delete", user, method: :delete,
        data: {
          confirm: "You sure?" 
      } %>
      <% end %>

    </section>
  </aside>
  <div class='col-md-8'></div>
</div>